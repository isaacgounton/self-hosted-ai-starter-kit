# PostgreSQL Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=changeme-postgres-password
POSTGRES_DB=n8n

# n8n Security
# Generate with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=changeme-encryption-key-32-chars
N8N_USER_MANAGEMENT_JWT_SECRET=changeme-jwt-secret-32-chars

# n8n Settings
N8N_DEFAULT_BINARY_DATA_MODE=filesystem

# IMPORTANT: For Coolify deployment, set this to your actual domain
# Example: https://n8n.yourdomain.com
SERVICE_URL_N8N=https://n8n.yourdomain.com

# MinIO Configuration (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=changeme-minio-password

# Ollama Configuration (only needed for local models)
# For Coolify internal networking with local Ollama:
# OLLAMA_HOST=ollama-cpu:11434
#
# For Mac users running OLLAMA locally:
# OLLAMA_HOST=host.docker.internal:11434
